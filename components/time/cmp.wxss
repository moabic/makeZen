/* components/time/cmp.wxss */
.wrapper {
    display:flex;
    justify-content: center;
    margin-bottom:30rpx;
    margin-top:100rpx;
}
.text {
    font-size:50rpx;
    position: relative;
}
.text::after{
    content: "";
    display: block;
    position: absolute;
    left:50%;
    margin:15rpx 0;
    transform: translateX(-50%);
    width:100rpx;
    height:5rpx;
    background-color:#666;
}